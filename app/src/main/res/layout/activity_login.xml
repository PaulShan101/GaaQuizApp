<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".Login">


    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:text="Login to your Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"
        android:textAlignment="center" android:layout_marginTop="30pt"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_email_login" android:layout_centerInParent="true" android:background="#fff"
        android:padding="10dp" android:hint="youremail@gmail.com"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_password_login"
        android:layout_below="@+id/user_email_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:padding="10dp"
        android:hint="add you password"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_activity"
            android:layout_weight="1"
            android:background="#cc2323"
            android:textColor="#fff"/>
        <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_btn_activity"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"/>
    </LinearLayout>

</RelativeLayout>
